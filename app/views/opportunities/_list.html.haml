%ul.navigation.opportunities-list
  - list.found.each do |opportunity|
    %li{:class=>"#{opportunity.source}"}
      = link_to list.title_with_country(opportunity), opportunity_path(opportunity), {:class => "title" }

      %span.text
        = opportunity.teaser

      - if opportunity.source.eql? 'volume_opps'
        = render partial: "partials/open_opps_link"

      %span.expires
        Closing date:
        = opportunity.response_due_on.strftime('%d %B %Y')

