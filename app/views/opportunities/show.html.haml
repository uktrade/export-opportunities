- page = PagePresenter.new(@content)
- page.add_breadcrumb_current(@opportunity_detail.title_with_country)

.container
  = render partial: 'components/breadcrumbs', locals: { breadcrumbs: page.breadcrumbs }

  %article.opportunity
    %h1
      = @opportunity_detail.title_with_country

    %p.summary
      - if @opportunity_detail.source('volume_opps')
        For more information and to make a bid you will need to go to the third party website.
      - else
        This is a business opportunity from an overseas buyer. Pitch for the business and explain how your company meets their requirements.

    .teaser
      = @opportunity_detail.teaser


    .details
      %h2 Details
      - if @opportunity_detail.source('volume_opps')
        = render partial: "partials/open_opps_link"

      %dl
        %dt.expiry
          Opportunity closing date
        %dd.expiry
          = @opportunity_detail.expires

        %dt.published
          Opportunity publication date
        %dd.published
          = @opportunity_detail.published_date

        - if @opportunity_detail.source('post')
          %dt.opportunity_type
            Opportunity type
          %dd.opportunity_type
            = @opportunity_detail.type
            %br
            - if @opportunity_detail.type == 'Aid Funded Business'
              = @opportunity_detail.link_to_aid_funded "Your guide for aid funded business"

        - if @opportunity_detail.sectors && @opportunity_detail.source('post')
          %dt.industry
            Industry
          %dd.industry
            = @opportunity_detail.industry_links

        - if @opportunity_detail.opportunity_cpvs.present?
          %dt.category
            Category
          %dd.category
            = @opportunity_detail.put(@@opportunity_detail.opportunity_cpvs.map(&:industry_id).join(', '), '-')

        - unless @opportunity_detail.source('volume_opps')
          %dt.enquiries
            Enquiries received
          %dd.enquiries
            = @opportunity_detail.enquiries_total

        %dt.value
          Value of contract
        %dd.value
          = @opportunity_detail.value

        - if @opportunity_detail.guides_available
          %dt.guide
            Your guide to exporting
          %dd.guide
            %ul.navigation
              - @opportunity_detail.country_guides.each do |link|
                %li= link

      -# TODO: Just sending to feedback location for now
      = link_to "Report opportunity", Figaro.env.CONTACT_US_FORM, :class=>"report"


    .description
      - if @opportunity_detail.description.present? && (@opportunity_detail.description != @opportunity_detail.title)
        %h2 Description
        = @opportunity_detail.description

      %dl
        %dt.expiry
          Opportunity closing date
        %dd.expiry
          = @opportunity_detail.expires

        %dt.value
          Value of contract
        %dd.value
          = @opportunity_detail.value

        - if @opportunity_detail.supplier_preference?
          %dt.supplier-preference
            The buyer is happy to talk to
          %dd.supplier-preference
            = @opportunity_detail.supplier_preferences

    - unless @opportunity_detail.source('post') || @opportunity_detail.buyer_details_empty?
      .buyer
        %h2 About the buyer
        %dl
          %dt.address
            Address
          %dd.address
            = @opportunity_detail.buyer_name
            = @opportunity_detail.buyer_address

          - unless @opportunity_detail.contact.blank?
            %dt.contact
              Contact
            %dd.contact
              = @opportunity_detail.contact



    - content_for :disclaimer_content  do
      .disclaimer
        %p= @content["disclaimer_1"]
        %p= @content["disclaimer_2"]
        -if @opportunity_detail.translated?
          %p= @content["disclaimer_3"]

    .bid
      - if @opportunity_detail.expired?
        %p.expired
          %strong
            = t('@opportunity_detail.expired')
          %br
          Visit the
          = link_to 'opportunities page', opportunities_path
          to find another.

      - else
        - if @opportunity_detail.source('post')
          - if @opportunity_detail.created_at > Date.parse(Figaro.env.SIGNOFF_LINES_DEPLOYMENT_DATE)
            %h2 Express your interest
            - @opportunity_detail.sign_off_content.each do |line|
              = content_tag("p", line, class: "sign-off")

          = yield :disclaimer_content

          - if @opportunity_detail.target_url.present?
            = link_to 'Go to third party website', @opportunity_detail.target_url, class: 'button', target: :_blank, title: 'Opens in a new window', rel: 'noopener noreferrer'

          - else
            = link_to 'Express your interest', new_enquiry_path(@opportunity.slug), class: 'button abcbutton'

        - else
          -# OpenOpps/Third-party location.
          %h2 Bid for tender
          - @opportunity_detail.sign_off_content.each do |line|
            = content_tag("p", line, class: "sign-off")

          = yield :disclaimer_content
          = link_to 'Go to third party website', @opportunity_detail.tender_url, class: 'button', target: :_blank, title: 'Opens in a new window', rel: 'noopener noreferrer'


    = render partial: 'components/sharing_links', locals: { title: @opportunity_detail.title_with_country, path: opportunity_url(@opportunity) }
