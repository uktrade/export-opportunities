%fieldset.field.date-month-year{ id: input[:id] }
  %legend
    = input[:label]

  - unless input[:description].nil? or input[:description].empty?
    %p.description{ :id=> input[:description_id] }
      = input[:description]

  %label.day
    %span Day
    = select_day input[:date], prefix: input[:name], selected: input[:date].day

  %label.month
    %span Month
    = select_month input[:date], prefix: input[:name], use_two_digit_numbers: true, selected: input[:date].month

  %label.year
    %span Year
    = select_year input[:date], prefix: input[:name], selected: input[:date].year
