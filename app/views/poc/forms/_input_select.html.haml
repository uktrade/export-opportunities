.field.select
  = render partial: "forms/input_label", locals: { label: input[:label] }
  %select{name: input[:name], id: input[:id]}
    - if input[:indexed].present?
      - input[:options].each_with_index do |option, index|
        - if option[:selected]
          %option{value: index, selected: "true"}
            = option[:text]
        - else
          %option{value: index}
            = option[:text]

    - else
      - input[:options].each do |option|
        - if option[:selected]
          %option{value: option[:value], selected: "true"}
            = option[:text]
        - else
          %option{value: option[:value]}
            = option[:text]
