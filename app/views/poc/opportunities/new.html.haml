- page = Poc::PagePresenter.new('Create opportunity')
- form = Poc::OpportunityFormPresenter.new(@process)
- content_for :page_specific_head do
  = javascript_include_tag 'poc/layouts/form.js'


.process
  .container
    = render partial: 'components/breadcrumbs', locals: { breadcrumbs: page.breadcrumbs }
    = render partial: 'poc/opportunities/new/' + form.view, locals: { form: form }
