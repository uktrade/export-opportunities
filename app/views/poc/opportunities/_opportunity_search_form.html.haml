= form_tag poc_opportunities_path, class: 'opportunities-search-form', method: :get do
  = hidden_field_tag :isSearchAndFilter, true
  = hidden_field_tag :filterOpen, params[:filterOpen], id: 'filterOpen'
  %label.term
    %span.verbose Product or service keyword
    %input{:name=>"s", :placeholder=>"What product or service are you selling?", :autocomplete=>"off", :type=>"search"}

  %label.industries
    %span.verbose Filter by country (optional)
    = render "includes/industry_select"

  %input.button.submit{:name=>"commit", :value=>"Find opportunities", :type=>"submit"}
