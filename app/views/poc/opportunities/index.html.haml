- page = Poc::PagePresenter.new(@content)
- recent_opportunities = Poc::OpportunitySearchResultsPresenter.new(@content, @recent_opportunities, {})
- content_for :action_specific_head do
  = stylesheet_link_tag 'poc/layouts/landing'
  = javascript_include_tag 'poc/layouts/landing'


%section.hero-section.search-section
  .container
    = render partial: 'components/breadcrumbs', locals: { breadcrumbs: page.breadcrumbs }

    %h1 Find business opportunities
    %p Search for opportunitities and pitch your company to overseas buyers who are looking for products and services like yours.
    = render "opportunities/search_form"

%section#recent-opportunities
  .container
    %h2 Latest export opportunities
    = render partial: "opportunities/list", locals: { list: recent_opportunities }
    = link_to "View more", poc_opportunities_root_url, :class=>"more button"

%section#featured-industries
  .container
    %h2 Featured industries
    = render partial: "opportunity_summary_list", locals: { list: @summary_list_by_sector }

%section#service-promotion
  .container
    %h2 Thousands of export leads and tenders from around the world. All in one place.
    %ul.navigation
      %li
        %strong Global opportunities
        Find tenders, requests from buyers or exclusively sourced business leads all from your industry.

      %li 
        %strong Overseas buyers
        Let buyers from around the world connect with you and start trading.

      %li
        %strong Trade profiles
        Create a profile to promote your company and improve your chances of winning.

      %li
        %strong Email alerts
        Create email alerts so you know when a matching opportunity is published.


= render "includes/testimonials_section"
= render "includes/how_it_works_section"

%section.search-section
  .container
    %h2 Find business opportunities
    = render "opportunities/search_form"



- content_for :footer do
  = render partial: 'includes/footer_domestic'
