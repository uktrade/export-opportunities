.opportunity-search-results
  %dl
    - opportunity_search_results.items.each do |opportunity|
      %dt
        = link_to opportunity.title.strip, opportunity_path(opportunity)
      %dd
        = opportunity.teaser
        %form.actions
          %button.link.save Save for later
          %button.link.share Share

  = paginate @opportunities, params: { controller: 'opportunities', action: 'index', format: ''}
  -#= link_to "View all (1,228)", "opportunities/all", :class=>"button all"


  = opportunity_search_results.view_all_link "button all"

