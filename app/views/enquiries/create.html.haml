- page = Poc::PagePresenter.new(@content)

.container
  = render partial: "components/breadcrumbs", locals: { breadcrumbs: page.breadcrumbs }

  %section
    .confirmation
      %h1 Thank you
      %p Your details have been submitted and will be reviewed by our team. You will be notified of any potential next steps in 5 working days.
      %p
      = link_to 'View your proposals to date', dashboard_path, class: 'button'
    - unless trade_profile(@enquiry.company_house_number)
      %p
        We noticed that you don't have a trade profile.
        = link_to 'You can create one here.', "#{Figaro.env.TRADE_PROFILE_CREATE_PAGE}#{@enquiry.company_house_number}", target: :blank


