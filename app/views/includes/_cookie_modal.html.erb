<div id="header-cookie-notice" class="cookie-notice" dir="ltr" data-ga-section="cookieNotice">
  <div class="container cookie-notice-container">
    <div class="grid-row">
      <div class="cookie-confirmation">
        <div class="column-full">
          <p>You've accepted all cookies. You can <a class="link" href="<%= Figaro.env.PRIVACY_AND_COOKIES_PREFERENCES_URL %>">change your settings</a> at any time.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  var element = document.createElement('div');
  document.body.appendChild(element);
  reactComponents.CookiesModal({
    element: element,
    privacyCookiesUrl: '<%= Figaro.env.PRIVACY_AND_COOKIES_URL %>',
    preferencesUrl: '<%= Figaro.env.PRIVACY_AND_COOKIES_PREFERENCES_URL %>',
    isOpen: dit.components.cookieNotice.getPreferencesCookie() === null
  })
</script>