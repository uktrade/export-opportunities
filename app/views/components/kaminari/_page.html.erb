<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if page.current? %>
  <span class="verbose">Page </span>
  <span class="<%= 'active current' if page.current? %>"><%= page %></span>
  <span class="verbose">(current) </span>
<% else %>
  <%= link_to url, {:remote => remote, :rel => page.next? ? 'next' : page.prev? ? 'prev' : nil} do %>
    <span class="verbose">Page </span><%= page %>
  <% end %>
<% end %>

