- presenter = OpportunityPresenter.new(self, @opportunity, @content)

%h1
  %span= presenter.content_with_inclusion 'title_prefix', [@reminder_number]
  =presenter.content 'title_main'
%br
%p= presenter.content 'greeting'
%p= presenter.content_with_inclusion 'why_email', [@enquiry.opportunity.title, @enquiry.company_name]
%p= presenter.content 'what_to_do'

%p.action
  =link_to presenter.content('button'), admin_enquiry_url(@enquiry.id)
%br

%p= presenter.content_with_inclusion 'contact_help', [mail_to('exportopportunities@trade.gsi.gov.uk')]

